<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >



        <ImageView android:layout_width="match_parent" android:layout_height="260dp"
    android:id="@+id/detalle_imagen"
               android:scaleType="centerCrop"

    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/detalle_nombre"
              android:textSize="22sp"
              android:layout_marginTop="8dp"
              android:layout_marginRight="16dp"
              android:layout_marginLeft="16dp"
              android:textColor="@color/colorPrimary"
    />


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
               android:id="@+id/detalle_concepto"
              android:textSize="16sp"
              android:layout_marginTop="8dp"
              android:layout_marginRight="16dp"
              android:layout_marginLeft="16dp"

    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/detalle_normas"
              android:textSize="16sp"
              android:layout_marginTop="8dp"
              android:layout_marginRight="16dp"
              android:layout_marginLeft="16dp"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/detalle_fuentes"
              android:textSize="16sp"
              android:layout_marginTop="8dp"
              android:layout_marginRight="16dp"
              android:layout_marginLeft="16dp"
    />

    <android.support.design.button.MaterialButton android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
     android:text="VER COMPLETA"
                                                  android:id="@+id/detalle_ver_pdf"
                                                  android:layout_gravity="center_horizontal"
    />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>